generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String            @unique
  gender          String
  phoneNumber     String
  userType        String
  feedback        String?
  address         String?
  propertyAddress PropertyAddress[]
}

model PropertyAddress {
  id                Int          @id @default(autoincrement())
  plotNo            String?
  street            String
  city              String
  area              String
  province          String
  country           String       @default("Zambia")
  rentalType        String //Fixed or RoomVariable
  propertyType      String? //Fixed or RoomVariable
  closestUniversity University[]
  User              User?        @relation(fields: [userId], references: [id])
  userId            Int?
}

model University {
  id                  Int              @id @default(autoincrement())
  name                String
  location            String
  abbreviation        String?
  closeByAccomodation PropertyAddress? @relation(fields: [propertyAddressId], references: [id])
  propertyAddressId   Int?
}
